<Window x:Class="LogicTool.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Логические функции — ЛР-4" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Конвертеры -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Стили -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#B0B0B0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Вкладки -->
        <TabControl Grid.Row="0" Grid.RowSpan="2">
            <!-- Вкладка: По номеру -->
            <TabItem Header="По номеру">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!-- Ввод -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Количество переменных:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Width="50" Text="{Binding VariableCount, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                            <TextBlock Text="Номер функции:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                            <TextBox Width="100" Text="{Binding FunctionNumber, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                            <Button Content="Вычислить" Command="{Binding GenerateCommand}" Margin="10,0"/>
                            <Button Content="Пресет: n=3, num=11" Command="{Binding Preset1Command}" Margin="10,0"/>
                        </StackPanel>

                        <!-- Бинарное представление -->
                        <TextBlock Text="{Binding BinaryRepresentation}" FontWeight="Bold" Margin="0,0,0,10"/>

                        <!-- Предупреждение -->
                        <TextBlock Text="{Binding ComplexityWarning}" Foreground="Red" FontWeight="Bold" 
                                   Visibility="{Binding ComplexityWarning, Converter={StaticResource BoolToVis}}" Margin="0,0,0,10"/>

                        <!-- Кнопки -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="Таблица истинности" Command="{Binding ShowTruthTableCommand}"/>
                            <Button Content="DNF" Command="{Binding ShowDNFCommand}"/>
                            <Button Content="KNF" Command="{Binding ShowKNFCommand}"/>
                        </StackPanel>

                        <!-- Результат -->
                        <TextBlock Text="Результат:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ResultText}" IsReadOnly="True" AcceptsReturn="True" Height="200"
                                 VerticalScrollBarVisibility="Auto"/>
                        <Button Content="Копировать в буфер" Command="{Binding CopyResultCommand}" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка: По формуле -->
            <TabItem Header="По формуле">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Формула:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Width="300" Text="{Binding Formula, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                            <Button Content="Вычислить" Command="{Binding ParseCommand}" Margin="10,0"/>
                            <Button Content="Пресет: (x1 | x2) -> x3" Command="{Binding Preset2Command}" Margin="10,0"/>
                        </StackPanel>

                        <TextBlock Text="-/! - НЕ, ∧/&amp; - И, ∨/| - ИЛИ, ^ - XOR, -> - импликация, => - эквивалентность" 
                                    FontStyle="Italic" Foreground="Gray" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding Status}" FontWeight="Bold" Foreground="{Binding StatusColor}" Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding ComplexityWarning}" Foreground="Red" FontWeight="Bold" 
                                   Visibility="{Binding ComplexityWarning, Converter={StaticResource BoolToVis}}" Margin="0,0,0,10"/>

                        <TextBlock Text="Результат:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ResultText}" IsReadOnly="True" AcceptsReturn="True" Height="200"
                                 VerticalScrollBarVisibility="Auto"/>
                        <Button Content="Копировать в буфер" Command="{Binding CopyResultCommand}" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка: Сравнение -->
            <TabItem Header="Сравнение">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!-- Функция 1 -->
                        <TextBlock Text="Функция 1:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton Content="Формула" IsChecked="{Binding IsFormula1}" Margin="0,0,10,0"/>
                            <RadioButton Content="Номер" IsChecked="{Binding IsNumber1}" Margin="0,0,10,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Visibility="{Binding IsFormula1, Converter={StaticResource BoolToVis}}">
                                <TextBox Width="250" Text="{Binding Formula1}"/>
                            </Border>
                            <Border Visibility="{Binding IsNumber1, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="n:" Margin="0,0,5,0"/>
                                    <TextBox Width="40" Text="{Binding VarCount1}"/>
                                    <TextBlock Text="num:" Margin="10,0,5,0"/>
                                    <TextBox Width="60" Text="{Binding Number1}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Функция 2 -->
                        <TextBlock Text="Функция 2:" FontWeight="Bold" Margin="0,20,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton Content="Формула" IsChecked="{Binding IsFormula2}" Margin="0,0,10,0"/>
                            <RadioButton Content="Номер" IsChecked="{Binding IsNumber2}" Margin="0,0,10,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Visibility="{Binding IsFormula2, Converter={StaticResource BoolToVis}}">
                                <TextBox Width="250" Text="{Binding Formula2}"/>
                            </Border>
                            <Border Visibility="{Binding IsNumber2, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="n:" Margin="0,0,5,0"/>
                                    <TextBox Width="40" Text="{Binding VarCount2}"/>
                                    <TextBlock Text="num:" Margin="10,0,5,0"/>
                                    <TextBox Width="60" Text="{Binding Number2}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <Button Content="Сравнить" Command="{Binding CompareCommand}" Margin="0,10,0,0"/>
                        <Button Content="Пресет: эквивалентность DNF" Command="{Binding Preset3Command}" Margin="10,10,0,0"/>

                        <TextBlock Text="{Binding ComparisonResult}" FontWeight="Bold" Margin="0,15,0,5"/>
                        <TextBlock Text="{Binding CounterExample}" Foreground="Red" Visibility="{Binding HasCounterExample, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка: Справка -->
            <TabItem Header="Справка">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Лабораторная работа №4: Логические функции" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <TextBlock Text="Описание программы:" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBlock Text="Данная программа предназначена для работы с булевыми функциями: генерации по номеру, анализа по формуле и сравнения функций." 
                                   TextWrapping="Wrap" Margin="0,0,0,15"/>

                        <TextBlock Text="Вкладка 'По номеру':" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                        <TextBlock Text="• Введите количество переменных (n) и номер функции" TextWrapping="Wrap" Margin="10,0,0,2"/>
                        <TextBlock Text="• Программа покажет битовое представление функции" TextWrapping="Wrap" Margin="10,0,0,2"/>
                        <TextBlock Text="• Можно получить таблицу истинности, ДНФ и КНФ" TextWrapping="Wrap" Margin="10,0,0,10"/>

                        <TextBlock Text="Вкладка 'По формуле':" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                        <TextBlock Text="• Введите логическую формулу используя поддерживаемые операторы" TextWrapping="Wrap" Margin="10,0,0,2"/>
                        <TextBlock Text="• Поддерживаемые операторы: НЕ (!/-), И (&amp;/∧), ИЛИ (|/∨), XOR (^), импликация (-&gt;), эквивалентность (=)" TextWrapping="Wrap" Margin="10,0,0,10"/>

                        <TextBlock Text="Вкладка 'Сравнение':" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                        <TextBlock Text="• Сравните две функции заданные формулой или номером" TextWrapping="Wrap" Margin="10,0,0,2"/>
                        <TextBlock Text="• Программа определит эквивалентность функций" TextWrapping="Wrap" Margin="10,0,0,2"/>
                        <TextBlock Text="• При неэквивалентности будет показан контрпример" TextWrapping="Wrap" Margin="10,0,0,10"/>

                        <TextBlock Text="Поддерживаемые операторы:" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                        <StackPanel Margin="10,0,0,10">
                            <TextBlock Text="• НЕ: !x1, -x1" Margin="0,1,0,1"/>
                            <TextBlock Text="• И: x1 &amp; x2, x1 ∧ x2" Margin="0,1,0,1"/>
                            <TextBlock Text="• ИЛИ: x1 | x2, x1 ∨ x2" Margin="0,1,0,1"/>
                            <TextBlock Text="• XOR: x1 ^ x2" Margin="0,1,0,1"/>
                            <TextBlock Text="• Импликация: x1 -&gt; x2" Margin="0,1,0,1"/>
                            <TextBlock Text="• Эквивалентность: x1 =&gt; x2" Margin="0,1,0,1"/>
                        </StackPanel>

                        <TextBlock Text="Примеры формул:" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                        <StackPanel Margin="10,0,0,10">
                            <TextBlock Text="• (x1 | x2) -&gt; x3" Margin="0,1,0,1"/>
                            <TextBlock Text="• x1 &amp; !x2 | x3" Margin="0,1,0,1"/>
                            <TextBlock Text="• (x1 ^ x2) =&gt; x3" Margin="0,1,0,1"/>
                            <TextBlock Text="• !(x1 &amp; x2) | x3" Margin="0,1,0,1"/>
                        </StackPanel>

                        <TextBlock Text="Примечания:" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                        <TextBlock Text="• Используйте круглые скобки для задания приоритета операций" TextWrapping="Wrap" Margin="10,0,0,2"/>
                        <TextBlock Text="• Переменные должны быть в формате x1, x2, x3, ..." TextWrapping="Wrap" Margin="10,0,0,2"/>
                        <TextBlock Text="• При большом количестве переменных вычисления могут занять время" TextWrapping="Wrap" Margin="10,0,0,2"/>
                        <TextBlock Text="• Программа предупредит о высокой вычислительной сложности" TextWrapping="Wrap" Margin="10,0,0,10"/>

                        <TextBlock Text="Разработчик: [Ваше имя/группа]" FontStyle="Italic" Foreground="Gray" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>