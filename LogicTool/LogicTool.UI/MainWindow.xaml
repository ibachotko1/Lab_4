<Window x:Class="LogicTool.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:LogicTool.UI.Converters"
        mc:Ignorable="d"
        Title="Логические функции — ЛР-4"
        Height="750"
        Width="1150"
        Background="#F4F6FB"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibility"/>
        <converters:EnumToBooleanConverter x:Key="EnumToBoolean"/>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#4C7DFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E63CC"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логические функции — ЛР-4"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#1F2937"
                   Margin="5,0,0,15"/>

        <TabControl Grid.Row="1">
            <!-- По номеру -->
            <TabItem Header="📌 По номеру" DataContext="{Binding NumberTab}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Функция по номеру" FontSize="15" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                    <TextBlock Text="n:" VerticalAlignment="Center"/>
                                    <TextBox Width="60" Text="{Binding VariableCount, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBlock Text="num:" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                    <TextBox Width="140" Text="{Binding FunctionNumber, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Content="Вычислить" Command="{Binding GenerateCommand}" Margin="15,0,0,0"/>
                                    <Button Content="Пресет n=3, num=11" Command="{Binding PresetCommand}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding BinaryRepresentation, Mode=OneWay}"
                                           Margin="0,12,0,0"
                                           FontWeight="Bold"
                                           Foreground="#111827"/>
                                <TextBlock Text="{Binding Legend}" Foreground="Gray" Margin="0,6,0,0"/>
                                <TextBlock Text="{Binding ComplexityWarning}"
                                           Foreground="#D14343"
                                           FontWeight="Bold"
                                           Margin="0,10,0,0"
                                           Visibility="{Binding HasComplexityWarning, Converter={StaticResource BoolToVisibility}}"/>
                                <TextBox Text="{Binding BinaryExplanation, Mode=OneWay}"
                                         Visibility="{Binding HasBinaryExplanation, Converter={StaticResource BoolToVisibility}}"
                                         Margin="0,12,0,0"
                                         IsReadOnly="True"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         Height="140"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Content="Таблица" Command="{Binding ShowTruthTableCommand}"/>
                                    <Button Content="DNF" Command="{Binding ShowDnfCommand}"/>
                                    <Button Content="KNF" Command="{Binding ShowKnfCommand}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding ResultTitle}" FontWeight="SemiBold" FontSize="15" Margin="0,12,0,6"/>
                                <TextBox Text="{Binding ResultText, Mode=OneWay}"
                                         IsReadOnly="True"
                                         AcceptsReturn="True"
                                         Height="250"
                                         VerticalScrollBarVisibility="Auto"/>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding MetricsSummary}" FontStyle="Italic" Foreground="#374151"/>
                                    <Button Content="Копировать" Command="{Binding CopyCommand}" Margin="15,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- По формуле -->
            <TabItem Header="✍️ По формуле" DataContext="{Binding FormulaTab}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Формула" FontSize="15" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <TextBox Width="400" Text="{Binding Formula, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Content="Разобрать и вычислить" Command="{Binding ParseCommand}" Margin="12,0,0,0"/>
                                    <Button Content="Пресет (x1 | x2) -> x3" Command="{Binding PresetCommand}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Legend}" Foreground="Gray" Margin="0,6,0,0"/>
                                <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusBrush}" FontWeight="SemiBold" Margin="0,10,0,0"/>
                                <TextBlock Text="{Binding ComplexityWarning}"
                                           Foreground="#D14343"
                                           FontWeight="Bold"
                                           Visibility="{Binding HasComplexityWarning, Converter={StaticResource BoolToVisibility}}"
                                           Margin="0,6,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Формула в базисе {¬, ∧, ∨}" FontWeight="SemiBold"/>
                                    <TextBox Text="{Binding BasisText, Mode=OneWay}"
                                             Height="140"
                                             Margin="0,8,0,0"
                                             AcceptsReturn="True"
                                             IsReadOnly="True"
                                             VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Лексер → ОПЗ" FontWeight="SemiBold"/>
                                    <TextBox Text="{Binding PipelineText, Mode=OneWay}"
                                             Height="140"
                                             Margin="0,8,0,0"
                                             AcceptsReturn="True"
                                             IsReadOnly="True"
                                             VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="{Binding ResultTitle}" FontWeight="SemiBold" FontSize="15"/>
                                <TextBox Text="{Binding ResultText, Mode=OneWay}"
                                         IsReadOnly="True"
                                         AcceptsReturn="True"
                                         Height="320"
                                         Margin="0,8,0,0"
                                         VerticalScrollBarVisibility="Auto"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="{Binding MetricsSummary}" FontStyle="Italic" Foreground="#374151"/>
                                    <Button Content="Копировать" Command="{Binding CopyCommand}" Margin="15,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Сравнение -->
            <TabItem Header="⚖️ Сравнение" DataContext="{Binding ComparisonTab}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Функция 1" FontSize="15" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <RadioButton Content="Формула"
                                                 GroupName="Mode1"
                                                 IsChecked="{Binding FirstKind, Converter={StaticResource EnumToBoolean}, ConverterParameter=Formula}"
                                                 Margin="0,0,10,0"/>
                                    <RadioButton Content="Номер"
                                                 GroupName="Mode1"
                                                 IsChecked="{Binding FirstKind, Converter={StaticResource EnumToBoolean}, ConverterParameter=Number}"/>
                                </StackPanel>
                                <TextBox Text="{Binding Formula1}" Margin="0,8,0,0"
                                         Visibility="{Binding ShowFormula1, Converter={StaticResource BoolToVisibility}}"/>
                                <StackPanel Orientation="Horizontal"
                                            Visibility="{Binding ShowNumber1, Converter={StaticResource BoolToVisibility}}"
                                            Margin="0,8,0,0">
                                    <TextBlock Text="n:" VerticalAlignment="Center"/>
                                    <TextBox Width="60" Text="{Binding VarCount1}"/>
                                    <TextBlock Text="num:" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                    <TextBox Width="100" Text="{Binding Number1}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Функция 2" FontSize="15" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <RadioButton Content="Формула"
                                                 GroupName="Mode2"
                                                 IsChecked="{Binding SecondKind, Converter={StaticResource EnumToBoolean}, ConverterParameter=Formula}"
                                                 Margin="0,0,10,0"/>
                                    <RadioButton Content="Номер"
                                                 GroupName="Mode2"
                                                 IsChecked="{Binding SecondKind, Converter={StaticResource EnumToBoolean}, ConverterParameter=Number}"/>
                                </StackPanel>
                                <TextBox Text="{Binding Formula2}" Margin="0,8,0,0"
                                         Visibility="{Binding ShowFormula2, Converter={StaticResource BoolToVisibility}}"/>
                                <StackPanel Orientation="Horizontal"
                                            Visibility="{Binding ShowNumber2, Converter={StaticResource BoolToVisibility}}"
                                            Margin="0,8,0,0">
                                    <TextBlock Text="n:" VerticalAlignment="Center"/>
                                    <TextBox Width="60" Text="{Binding VarCount2}"/>
                                    <TextBlock Text="num:" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                    <TextBox Width="100" Text="{Binding Number2}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Legend}" Foreground="Gray" Margin="0,10,0,0"/>
                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                    <Button Content="Сравнить" Command="{Binding CompareCommand}"/>
                                    <Button Content="Пресет эквивалентности" Command="{Binding PresetCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="{Binding ComparisonSummary}" FontWeight="SemiBold" FontSize="15"/>
                                <TextBlock Text="{Binding StatusDetail}" Margin="0,6,0,0"/>
                                <TextBlock Text="{Binding CounterExample}"
                                           Foreground="#D14343"
                                           FontWeight="SemiBold"
                                           Margin="0,6,0,0"
                                           Visibility="{Binding HasCounterExample, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>